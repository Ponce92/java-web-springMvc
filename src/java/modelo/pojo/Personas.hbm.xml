<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="true">
    <class name="Modelo.Pojo.Persona" table="personas" catalog="g_art" optimistic-lock="version">
        <id name="id" type="java.lang.Integer">
            <column name="persona_id"/>
            <generator class="identity"/>
            </id>
        
        
        <property name="nombrePersona" type="string">
            <column name="persona_nombre" length="50"/>
        </property>
        <property name="apellidoPersona" type="string">
            <column name="persona_apellido" length="50"/>
        </property>
        <property name="correoPersona" type="string">
            <column name="persona_correo" length="75"/>
        </property>     
    </class>
      
</hibernate-mapping>
